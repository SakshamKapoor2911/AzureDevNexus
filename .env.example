# Server Configuration
NODE_ENV=development
PORT=5000
HOST=localhost

# Azure AD Configuration
AZURE_AD_CLIENT_ID=your_azure_ad_client_id
AZURE_AD_CLIENT_SECRET=your_azure_ad_client_secret
AZURE_AD_TENANT_ID=your_azure_ad_tenant_id
AZURE_AD_REDIRECT_URI=http://localhost:5000/auth/callback

# Azure DevOps Configuration
AZURE_DEVOPS_PAT=your_azure_devops_personal_access_token
AZURE_DEVOPS_ORG_URL=https://dev.azure.com/your_organization

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# Database Configuration (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/azuredevnexus

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Security Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECRET=your_cookie_secret_here
