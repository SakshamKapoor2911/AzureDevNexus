{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=AzureDevNexus;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "AzureDevOps": {
    "OrganizationUrl": "https://dev.azure.com/your-organization",
    "PersonalAccessToken": "your-pat-token-here"
  },
  "AzureOpenAI": {
    "Endpoint": "https://your-resource.openai.azure.com/",
    "ApiKey": "your-api-key-here",
    "DeploymentName": "gpt-4",
    "DefaultModel": "gpt-4"
  },
  "Application": {
    "Name": "AzureDevNexus",
    "Version": "1.0.0",
    "Environment": "Development"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters-for-development",
    "Issuer": "AzureDevNexus",
    "Audience": "AzureDevNexusUsers",
    "ExpirationMinutes": 60
  }
}
